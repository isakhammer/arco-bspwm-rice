function ca(){
    if [ -n "$1" ]; then
    	    mkdir -p ~/.cache/ca
    	    touch ~/.cache/ca/ca
    	    echo "cd $PWD" > ~/.cache/ca/ca
    fi
    cat ~/.cache/ca/ca && bash ~/.cache/ca/ca
}

function p3(){
    if [ -n "$1" ]; then
    	    mkdir -p ~/.cache/p3
    	    touch ~/.cache/p3/pp
    	    echo "cd $PWD && python3 $1 || cd -" > ~/.cache/p3/pp
    fi
    cat ~/.cache/p3/pp && bash ~/.cache/p3/pp
}

